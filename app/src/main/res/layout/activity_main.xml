<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context =".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your portfolio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:id="@+id/txtViewWelcome"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPortfolio"
        android:layout_below="@id/txtViewWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Portfolio"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTrade"
        android:layout_below="@id/btnPortfolio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Trade"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOptions"
        android:layout_below="@id/btnTrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Options"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@id/btnOptions"
        android:text="by Team"
        android:id="@+id/txtViewBy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>
</RelativeLayout>